<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fr.wcs.viaferrata.HomeActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/homeButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:alpha="0.7"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/viaferratabg" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Via Ferrata"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="60sp"
        android:layout_marginTop="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/buttonRecherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search_button"
        android:text="@string/boutonRecherche"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp" />

    <Button
        android:id="@+id/buttonFavoris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:background="@drawable/search_button"
        android:text="@string/boutonFavoris"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:textSize="24dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>


