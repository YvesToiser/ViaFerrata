<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    tools:context="fr.wcs.viaferrata.ViaActivity">

    <TextView
        android:id="@+id/viaName"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/viaVilleStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/viaVilleStatic"
        app:layout_constraintTop_toBottomOf="@+id/viaName"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/viaVille"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/viaName"
        app:layout_constraintTop_toBottomOf="@+id/viaVilleStat"
        android:layout_marginLeft="26dp" />

    <TextView
        android:id="@+id/viaDepartementStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/viaDepartementStatic"
        app:layout_constraintLeft_toLeftOf="@+id/viaVilleStat"
        app:layout_constraintTop_toBottomOf="@+id/viaVille" />

    <TextView
        android:id="@+id/viaDepartement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/viaVille"
        app:layout_constraintTop_toBottomOf="@+id/viaDepartementStat" />

    <TextView
        android:id="@+id/viaRegionStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/viaRegionStatic"
        app:layout_constraintLeft_toLeftOf="@+id/viaDepartementStat"
        app:layout_constraintTop_toBottomOf="@+id/viaDepartement" />

    <TextView
        android:id="@+id/viaRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/viaDepartement"
        app:layout_constraintTop_toBottomOf="@+id/viaRegionStat" />

    <TextView
        android:id="@+id/viaNiveauStatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/viaNiveauStatic"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="51dp" />

    <TextView
        android:id="@+id/viaNiveau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="68dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/echelleImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/echelle" />

        <ImageView
            android:id="@+id/tyrolImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/tyrolienne" />

        <ImageView
            android:id="@+id/pontSingeImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/pont_de_singe" />

        <ImageView
            android:id="@+id/passerelleImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/passerelle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="386dp"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/viaEchelle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="207dp"
            tools:layout_editor_absoluteY="414dp" />

        <TextView
            android:id="@+id/viaTyrol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="298dp"
            tools:layout_editor_absoluteY="414dp" />

        <TextView
            android:id="@+id/viapontSinge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="414dp" />

        <TextView
            android:id="@+id/viaPasserelles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="414dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>