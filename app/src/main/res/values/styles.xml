<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Via">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Fs">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">false</item>
</style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/shape</item>
    </style>

    <style name="buttonSlidePannel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">10dp</item>
        <item name="android:background">@drawable/button_slide_panel</item>
    </style>
    <style name="bottom_menu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="boxLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <style name="boxLayout.text">
        <item name="android:layout_weight">0.1</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="boxLayout.picto">
        <item name="android:layout_weight">0.75</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="boxLayout.nb">
        <item name="android:layout_weight">0.15</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
